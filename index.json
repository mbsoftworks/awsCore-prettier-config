{
  "$schema": "http://json.schemastore.org/prettierrc",
  "importOrder": [
    "^(reflect-metadata|cross-fetch/polyfill|source-map-support/register)$",
    "<THIRD_PARTY_MODULES>",
    "^@inter-ikea-digital/(.*)$",
    "^[./]"
  ],
  "importOrderParserPlugins": [
    "typescript",
    "decorators-legacy"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "printWidth": 100,
  "singleQuote": true
}
